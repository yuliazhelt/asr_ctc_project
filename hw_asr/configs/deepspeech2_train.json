{
    "name": "deepspeech2_train",
    "n_gpu": 1,
    "preprocessing": {
      "sr": 16000,
      "spectrogram": {
        "type": "MelSpectrogram",
        "args": {
        }
      },
      "log_spec": true
    },
    "augmentations": {
      "wave": [],
      "spectrogram": []
    },
    "arch": {
      "type": "DeepSpeech2",
      "args": {
        "n_feats": 128,
        "hidden_size": 1510,
        "num_rnn_layers" : 5,
        "bidirectional" : true
      }
    },
    "data": {
      "train": {
        "batch_size": 20,
        "num_workers": 4,
        "datasets": [
          {
            "type": "LibrispeechDataset",
            "args": {
              "part": "train-clean-360",
              "max_audio_length": 50.0,
              "max_text_length": 500,
              "limit": -1,
              "data_dir": "/kaggle/input/librispeech-clean/LibriSpeech/"
            }
          }
        ]
      },
      "val": {
        "batch_size": 20,
        "num_workers": 4,
        "datasets": [
          {
            "type": "LibrispeechDataset",
            "args": {
              "part": "test-clean",
              "max_audio_length": 50.0,
              "max_text_length": 500,
              "limit": -1,
              "source_dir": "/kaggle/input/librispeech",
              "kaggle": true
            }
          }
        ]
      }
    },
    "optimizer": {
      "type": "AdamW",
      "args": {
        "lr": 3e-4
      }
    },
    "loss": {
      "type": "CTCLoss",
      "args": {}
    },
    "metrics": [
      {
        "type": "ArgmaxWERMetric",
        "args": {
          "name": "WER (argmax)"
        }
      },
      {
        "type": "ArgmaxCERMetric",
        "args": {
          "name": "CER (argmax)"
        }
      }
    ],
    "lr_scheduler": {
      "type": "CosineAnnealingWarmRestarts",
      "args": {
        "T_0": 2000
      }
    },
    "trainer": {
      "epochs": 600,
      "save_dir": "saved/",
      "save_period": 10,
      "verbosity": 2,
      "monitor": "min val_loss",
      "early_stop": 100,
      "visualize": "wandb",
      "wandb_project": "asr_project",
      "len_epoch": 100,
      "grad_norm_clip": 10
    }
  }
  